generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

//rodar npx prisma migrate dev quando fazer os schemas
model Teste {
  id    String @id
  name  String
}

model AwaitingStories {
  id           String @id
  title        String
  description  String
  created_at   DateTime @default(now())
  updated_at   DateTime @default(now())
  sender       String
  sender_email String
}

model Stories {
  id           String @id
  title        String
  description  String
  created_at   DateTime @default(now())
  updated_at   DateTime @default(now())
  sender       String
  sender_email String
  adminId      String
  admin        Admin @relation(fields: [adminId], references: [id])
}

model Admin {
  id       String @id
  name     String
  email    String @unique
  password String
  Stories  Stories[]	
}

